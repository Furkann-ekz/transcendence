generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // "postgresql" olan bu satırı "sqlite" olarak değiştir
  url      = env("DATABASE_URL")
}

// Buradan aşağısı bizim veritabanı tablolarımızı temsil edecek.
// İlk olarak Kullanıcı (User) modelimizi oluşturalım.

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?  // Soru işareti, bu alanın zorunlu olmadığını belirtir.
  password  String
}